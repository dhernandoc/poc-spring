# Usar una imagen base con Maven y JDK 17
FROM maven:3.8.4-openjdk-17-slim AS build

# Establecer el directorio de trabajo dentro del contenedor
WORKDIR /app

# Copiar el archivo pom.xml y descargar las dependencias del proyecto
COPY pom.xml .
RUN mvn dependency:go-offline

# Copiar el código fuente del proyecto y compilarlo
COPY src ./src
RUN mvn clean package

# Usar una imagen base ligera de JDK 17 con Alpine Linux para la ejecución
FROM openjdk:17-alpine

# Establecer el directorio de trabajo dentro del contenedor
WORKDIR /app

# Copiar el archivo JAR construido al contenedor
COPY --from=build /app/target/poc-0.0.1-SNAPSHOT.jar app.jar

# Exponer el puerto 8080
EXPOSE 9999

# Comando para ejecutar la aplicación
ENTRYPOINT ["java", "-jar", "app.jar"]
